+VREyeParameters* VRDisplay::getEyeParameters(const String& whichEye)
+{
+    switch (stringToVREye(whichEye)) {
+    case VREyeLeft:
+        return m_eyeParametersLeft;
+    case VREyeRight:
+        return m_eyeParametersRight;
+    default:
+        return nullptr;
+    }
