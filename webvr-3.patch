+VRPosePtr OculusVRDevice::GetPose() {
+  VRPosePtr pose = VRPose::New();
+
+  ovrTrackingState ovr_state = ovr_GetTrackingState(session_,
+      ovr_GetTimeInSeconds(), true);
+
+  ovrPoseStatef pose_state = ovr_state.HeadPose;
